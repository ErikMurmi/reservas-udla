# Archivos de texto
[*.{cs,txt}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true

# Archivos Markdown
[*.md]
trim_trailing_whitespace = true

# Archivos C#
[*.cs]
dotnet_sort_system_directives = true
csharp_style_preferred_modifier_order = abstract, internal, private, protected, public, static, sealed, new
csharp_new_line_before_open_brace = all